

@model IEnumerable<ShoppingAssistant3._0.Models.ItemViewModel>




<div class="modal fade" id="locationModal" tabindex="-1" role="dialog" aria-labelledby="locationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="locationModalh1"></h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table style="padding: 10px; font-size: large">
                    <tbody>
                        <tr>
                            <td id="sideofaisle"></td>
                        </tr>
                        <tr>
                            <td id="shelfnumber"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>




    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="panel panel-primary">
                <div class="panel-heading text-center">
                    <h3>@item.Name</h3>
                    <div>
                        <img style="height: 50%; width: 50%" src="~/Content/Product-Image-Coming-Soon.png" alt="Sample Photo" />
                    </div>

                </div>
                <div class="panel-body">
                    <p>
                        <h5>Price: @item.priceformatted</h5>
                        <h5>InStock: @item.InStock</h5>
                        <h5>Stock Amount: @item.StockAmount</h5>
                    </p>
                </div>
                <div class="panel-footer">
                    <p style="padding-top: 25px"><button class="tn btn-primary btn-lg btn-block">Add to cart</button></p>
                    <p style="padding-top: 10px"><button onclick="showDetails(this);" class="tn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#locationModal" data-id="@item.Id">Location</button></p>
                </div>
            </div>
        </div>
    }

    <div class="text-right">
        <a href="~/Item/Index" class="btn btn-link">View All Items</a>
    </div>

